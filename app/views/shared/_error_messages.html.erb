<p>User error: <%= @user.errors.any? %></p>

<% if @user.errors.any? %>
  <% binding.pry %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error")%>.
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div> 
<% end %>